{{template "base" .}}

{{define "content" }}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-5">Test microservices</h1>
                <hr>
                <a id="broker-btn" class="btn btn-outline-secondary" href="javascript:void(0);">
                    Test broker
                    </a>
                <div id="output" class="mt-5" style="outline: 1px solid silver; padding: 2em;">
                    <span class="text-muted">Output shows here...</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4 class="mt-5">Sent</h4>
                <div class="mt-1" style="outline: 1px solid silver; padding: 2em;">
                    <pre id="payload"><span class="text-muted">Nothing sent yet...</span></pre>
                </div>
            </div>
            <div class="col">
                <h4 class="mt-5">Received</h4>
                <div class="mt-1" style="outline: 1px solid silver; padding: 2em;">
                    <pre id="received"><span class="text-muted">Nothing received yet...</span></pre>
                </div>
            </div>
        </div>
    </div>
{{end}}

{{define "js"}}
    <script>
        let brokenBtn = document.getElementById("broker-btn");
        let op = document.getElementById("output");
        let sent = document.getElementById("payload");
        let recd = document.getElementById("received");

brokenBtn.addEventListener("click", function(){
const body = {
method: 'POST',
}

fetch("http:\/\/localhost:8080", body)
.then((r) => r.json())
.then((data) => 
{sent.innerHTML = "empty post request"
recd.innerHTML = JSON.stringify(data, undefined, 4)
if(data.error){
console.log(data)
} else {
op.innerHTML += `<br><strong>Response : ${data.message}</strong></br>`;
}

}
).
catch((err) => {
op.innerHTML += `<br><strong>Err : ${err}</strong></br>`;

})

})

    </script>
{{end}}
